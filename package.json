{
  "name": "graphql-ip",
  "version": "1.0.0",
  "description": "Seamlessly inject client IP address into your GraphQL resolvers with full TypeScript support.",
  "keywords": [
    "graphql",
    "graphql-yoga",
    "ip",
    "graphql-context",
    "envelop",
    "plugin",
    "typescript",
    "apollo",
    "client-ip",
    "proxy-headers"
  ],
  "homepage": "https://github.com/hypecode-tech/graphql-ip#readme",
  "bugs": {
    "url": "https://github.com/hypecode-tech/graphql-ip/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypecode-tech/graphql-ip.git"
  },
  "license": "MIT",
  "author": {
    "name": "Kaan Mert AÄŸyol",
    "email": "kaan@hypecode.tech",
    "url": "https://github.com/hypecode-tech"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "require": "./dist/types.cjs",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "prepack": "npm run build",
    "release": "npm run build && npm run test && npm publish"
  },
  "peerDependencies": {
    "@envelop/core": ">=5.0.0",
    "graphql": ">=16.0.0"
  },
  "devDependencies": {
    "@envelop/core": "^5.2.3",
    "@envelop/testing": "^8.1.3",
    "@types/bun": "latest",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "bun-types": "^1.2.16",
    "eslint": "^9.29.0",
    "graphql": "^16.11.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "undici-types": "^7.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "graphql-yoga": "^5.13.5"
  }
}
